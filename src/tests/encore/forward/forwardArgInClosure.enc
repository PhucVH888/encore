active class Base
  def base() : int
    42
  end
end

active class Foo
  def join(ff : Fut[Fut[int]]) : int
    forward(ff ~~> (fun (f : Fut[int]) : int => forward(f)))
  end

  def duplicate() : Fut[int]
    (new Base) ! base()
  end
end

active class Main
  def main() : unit
    val arg = (new Foo) ! duplicate()
    println("{}", get((new Foo) ! join(arg)))
  end
end
